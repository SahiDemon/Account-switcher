{
    "manifest_version": 3,
    "name": "Account Switcher for ChatGPT",
    "version": "1.0",
    "description": "Switch accounts on ChatGPT by SahiDemon.",
    "permissions": [
        "tabs",
        "cookies",
        "activeTab",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "host_permissions": [
        "https://chatgpt.com/*"
    ],
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    }
}
